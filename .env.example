DEBUG=True

# Настройки приложения
TITLE=CRM
DESCRIPTION=CRM - это система управления взаимоотношениями с клиентами
VERSION=0.1.0
HOST=0.0.0.0
PORT=8000

# Настройки доступа в docs/redoc
DOCS_ACCESS=true
DOCS_USERNAME=admin
DOCS_PASSWORD=admin

# Настройки логирования
LOG_FORMAT=pretty
LOG_FILE=/var/log/app.log
LOG_LEVEL=DEBUG

# Настройки Redis
REDIS_USER=default
REDIS_PASSWORD=redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_SIZE=10

# Настройки базы данных PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crm_db

# Настройки RabbitMQ
RABBITMQ_CONNECTION_TIMEOUT=30
RABBITMQ_EXCHANGE=crm
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672

# Настройки AWS S3
AWS_SERVICE=s3
AWS_REGION=ru-central1
AWS_ENDPOINT=https://storage.yandexcloud.net
AWS_BUCKET=crm-bucket
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key

# Настройки CORS
ALLOW_ORIGINS=["http://localhost:3000","https://yourdomain.com"]
ALLOW_CREDENTIALS=true
ALLOW_METHODS=["*"]
ALLOW_HEADERS=["*"]

# Настройки логирования
LOGGING__LOG_FORMAT=pretty
LOGGING__LOG_FILE=app.log
LOGGING__LEVEL=DEBUG
LOGGING__MAX_BYTES=10485760
LOGGING__BACKUP_COUNT=5
LOGGING__ENCODING=utf-8
LOGGING__FILE_MODE=a